<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".portfolio"
    android:orientation="vertical"
    android:background="@color/background">

    <View
        android:layout_width="1140px"
        android:layout_height="1300px"
        android:background="@drawable/logindatabox"
        android:backgroundTint="@color/numpad"
        android:layout_marginLeft="-30px"
        android:layout_marginTop="-100px"
        android:alpha="1">
    </View>
    <ImageButton
        android:id="@+id/back6"
        android:layout_width="100px"
        android:layout_height="120px"
        android:src="@mipmap/ic_backnumpad_round"
        android:scaleType="centerCrop"
        android:layout_marginTop="-1200px"
        android:layout_marginLeft="30px"
        android:backgroundTint="@color/numpad"
        ></ImageButton>

    <TextView
        android:id="@+id/textView55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, I'm "
        android:textColor="@color/white"
        android:textSize="80px"
        android:textStyle="bold"
        android:layout_marginTop="50px"
        android:layout_marginLeft="30px"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Cooper"
        android:textColor="@color/white"
        android:textSize="80px"
        android:textStyle="bold"
        android:layout_marginLeft="30px"/>

    <View
        android:layout_width="400px"
        android:layout_height="400px"
        android:alpha="0.4"
        android:background="@drawable/forpic"
        android:layout_marginLeft="650px"
        android:layout_marginTop="-330px"
        ></View>
    <View
        android:layout_width="250px"
        android:layout_height="250px"
        android:alpha="1"
        android:background="@mipmap/ic_cooper1_foreground"
        android:layout_marginLeft="730px"
        android:layout_marginTop="-320px"
        ></View>

    <View
        android:layout_width="1200px"
        android:layout_height="10px"
        android:background="@drawable/logindatabox"
        android:backgroundTint="@color/background"
        android:layout_marginLeft="-30px"
        android:layout_marginTop="30px"
        android:alpha="1">
    </View>

    <TextView
        android:id="@+id/textView56"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UX Designer at"
        android:textSize="60px"
        android:textColor="@color/white"
        android:layout_marginLeft="30px"
        android:layout_marginTop="50px"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google"
        android:textSize="60px"
        android:textColor="@color/white"
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        />

    <View
        android:layout_width="80px"
        android:layout_height="80px"
        android:background="@mipmap/ic_star"
        android:layout_marginLeft="830px"
        android:layout_marginTop="-160px"
        android:alpha="1">
    </View>
    <TextView
        android:id="@+id/textView58"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4.8"
        android:textStyle="bold"
        android:textSize="40px"
        android:textColor="@color/white"
        android:layout_marginTop="-65px"
        android:layout_marginLeft="920px"/>

    <View
        android:layout_width="1200px"
        android:layout_height="10px"
        android:background="@drawable/logindatabox"
        android:backgroundTint="@color/background"
        android:layout_marginLeft="-30px"
        android:layout_marginTop="170px"
        android:alpha="1">
    </View>

    <TextView
        android:id="@+id/textView59"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:text="About me"
        android:textColor="@color/white"
        android:textSize="45px"
        android:layout_marginTop="60px"
        android:layout_marginLeft="30px"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView60"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:layout_marginTop="50px"
        android:layout_marginLeft="30px"
        android:textColor="@color/white"
        android:text="I am a passionate UX Developer at Google with a focus on \n creating user-centric and intutive interfaces. With 10 years\n of experience, I have had the opportunity to work on diverse\n projects that have shaped my understanding of design\n principles and user experience"
        />

    <TextView
        android:id="@+id/textView61"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:text="My Experience Include"
        android:textColor="@color/special"
        android:layout_marginTop="-150px"
        android:layout_marginLeft="30px"
        android:textSize="50px"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView62"
        android:layout_width="wrap_content"
        android:layout_height="120px"
        android:text="Career Advice"
        android:textColor="@color/white"
        android:background="@drawable/inputbox"
        android:backgroundTint="@color/numpad"
        android:layout_marginLeft="60px"
        android:textSize="50px"
        android:padding="20px"
        android:layout_marginTop="60px"/>

    <TextView
        android:id="@+id/textView63"
        android:layout_width="wrap_content"
        android:layout_height="120px"
        android:text="User Experience Design"
        android:textColor="@color/white"
        android:background="@drawable/inputbox"
        android:backgroundTint="@color/numpad"
        android:layout_marginLeft="470px"
        android:textSize="50px"
        android:padding="20px"
        android:layout_marginTop="-120px"
        />

    <TextView
        android:id="@+id/textView64"
        android:layout_width="wrap_content"
        android:layout_height="120px"
        android:text="Leadership"
        android:textColor="@color/white"
        android:background="@drawable/inputbox"
        android:backgroundTint="@color/numpad"
        android:layout_marginLeft="60px"
        android:textSize="50px"
        android:padding="20px"
        android:layout_marginTop="60px" />

    <TextView
        android:id="@+id/textView65"
        android:layout_width="wrap_content"
        android:layout_height="120px"
        android:text="Prototyping"
        android:textColor="@color/white"
        android:background="@drawable/inputbox"
        android:backgroundTint="@color/numpad"
        android:layout_marginLeft="400px"
        android:textSize="50px"
        android:padding="20px"
        android:layout_marginTop="-120px"/>

    <Button
        android:id="@+id/button21"
        android:layout_width="400px"
        android:layout_height="140px"
        android:text="Drop a review"
        android:textColor="@color/special"
        android:backgroundTint="@color/golden"
        android:layout_marginTop="30px"
        android:layout_marginLeft="60px"
        android:textAlignment="textStart"
        android:paddingLeft="50px"/>

    <View
        android:layout_width="80px"
        android:layout_height="80px"
        android:background="@mipmap/ic_review"
        android:layout_marginLeft="340px"
        android:layout_marginTop="-110px"
        android:alpha="1">
    </View>

    <Button
        android:id="@+id/button22"
        android:layout_width="460px"
        android:layout_height="140px"
        android:text="Join community"
        android:textColor="@color/special"
        android:backgroundTint="@color/golden"
        android:layout_marginTop="-110px"
        android:layout_marginLeft="560px"
        android:textAlignment="textStart"
        android:paddingLeft="50px"/>

    <View
        android:layout_width="80px"
        android:layout_height="80px"
        android:background="@mipmap/ic_community"
        android:layout_marginLeft="900px"
        android:layout_marginTop="-110px"
        android:alpha="1">
    </View>
    <TextView
        android:id="@+id/button23"
        android:layout_width="800px"
        android:layout_height="150px"
        android:textAlignment="center"
        android:textSize="50px"
        android:textColor="@color/white"
        android:paddingTop="30px"
        android:textStyle="bold"
        android:backgroundTint="@color/special"
        android:background="@drawable/inputbox"
        android:text="Book a Session"
        android:layout_marginTop="80px"
        android:layout_marginLeft="150px"/>

</LinearLayout>