<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/background"
    tools:context=".chats"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="970px"
        android:background="@color/background"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/back10"
            android:clickable="true"
            android:layout_marginTop="100px"
            android:layout_width="130px"
            android:layout_marginLeft="20px"
            android:background="@color/background"
            android:layout_height="80px"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_backcircle_round"
            android:backgroundTint="@color/background"

            ></ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chats"
            android:textColor="@color/special"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginTop="-95px"
            android:layout_marginLeft="140px"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Community"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="65px"
            android:layout_marginLeft="60px"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220px"
            android:layout_marginTop="30px"
            android:background="@color/background"


            android:orientation="horizontal">

            <ImageButton
                android:layout_width="200px"
                android:layout_height="200px"
                android:background="@drawable/chatactivity"
                android:layout_marginTop="20px"
                android:layout_marginLeft="30px"></ImageButton>


            <ImageButton
                android:layout_width="200px"
                android:layout_height="200px"
                android:background="@drawable/chatactivity"

                android:layout_marginTop="20px"
                android:layout_marginLeft="10px"></ImageButton>


            <ImageButton
                android:layout_width="200px"
                android:layout_height="200px"
                android:background="@drawable/chatactivity"

                android:layout_marginTop="20px"
                android:layout_marginLeft="10px"></ImageButton>


            <ImageButton
                android:layout_width="200px"
                android:layout_height="200px"
                android:background="@drawable/chatactivity"

                android:layout_marginTop="20px"
                android:layout_marginLeft="10px"></ImageButton>


            <ImageButton
                android:layout_width="200px"
                android:layout_height="200px"
                android:background="@drawable/chatactivity"

                android:layout_marginTop="20px"
                android:layout_marginLeft="10px"></ImageButton>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Messages"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="60px"
            android:layout_marginTop="60px"></TextView>


    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userRecyclerView"
        android:layout_marginTop="-100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="5dp"
        android:paddingHorizontal="8dp"
         />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_marginTop="-250px"
        android:layout_marginBottom="-300px"
        android:background="@color/background"
        android:orientation="vertical">

        <View
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="@drawable/addnew"
            android:layout_marginLeft="440px"
            android:layout_marginTop="-30px"
            android:alpha="1">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350px"
            android:layout_marginTop="-100px"
            android:layout_marginBottom="-300px"
            android:background="@color/special"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/home1"
                android:layout_width="180px"
                android:layout_height="130px"
                android:layout_marginLeft="20px"
                android:layout_marginTop="0px"
                android:backgroundTint="@color/special"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_home"></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/background"
                android:layout_marginTop="100px"
                android:layout_marginLeft="-140px"
                />
            <ImageButton
                android:id="@+id/searchbtn"
                android:layout_width="180px"
                android:layout_height="130px"
                android:layout_marginLeft="60px"
                android:layout_marginTop="10px"
                android:backgroundTint="@color/special"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_search"></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@color/background"
                android:layout_marginTop="100px"
                android:layout_marginLeft="-140px"
                />



            <ImageButton
                android:id="@+id/chat1"
                android:layout_width="180px"
                android:layout_height="130px"
                android:layout_marginLeft="300px"
                android:layout_marginTop="10px"
                android:backgroundTint="@color/special"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_msg"></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textColor="@color/background"
                android:layout_marginTop="100px"
                android:layout_marginLeft="-140px"
                />
            <ImageButton
                android:id="@+id/profile1"
                android:layout_width="180px"
                android:layout_height="130px"
                android:layout_marginLeft="80px"
                android:layout_marginTop="10px"
                android:backgroundTint="@color/special"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_person"></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/background"
                android:layout_marginTop="100px"
                android:layout_marginLeft="-140px"
                />
        </LinearLayout>
        <ImageButton
            android:id="@+id/addnew"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="500px"
            android:layout_marginTop="-90px"
            android:background="@drawable/addnew"
            android:backgroundTint="@color/special"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_circleadd_round"></ImageButton>
    </LinearLayout>
</LinearLayout>