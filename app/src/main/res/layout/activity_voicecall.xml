<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".voicecall"
    android:orientation="vertical"
    android:background="@color/background">

    <View
        android:layout_width="1200px"
        android:layout_height="1850px"
        android:alpha="1"
        android:background="@color/card"
        android:layout_marginLeft="-30px"
        android:layout_marginTop="-30px"
        ></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="John Cooper"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60px"
        android:layout_marginTop="-1650px"
        android:layout_marginLeft="380px"/>
    <TextView
        android:id="@+id/textView88"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="50:08"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="50px"
        android:layout_marginTop="0px"
        android:layout_marginLeft="470px"/>

    <View
        android:layout_width="400px"
        android:layout_height="400px"
        android:alpha="1"
        android:background="@drawable/callcircle"
        android:backgroundTint="#FFFDFD"
        android:layout_marginLeft="350px"
        android:layout_marginTop="20px"
        ></View>
    <View
        android:layout_width="400px"
        android:layout_height="400px"
        android:alpha="1"
        android:background="@mipmap/ic_cooper1_foreground"
        android:layout_marginLeft="350px"
        android:layout_marginTop="-400px"
        ></View>
    <View
        android:layout_width="350px"
        android:layout_height="20px"
        android:alpha="1"
        android:background="@drawable/inputbox"
        android:backgroundTint="#8C8B8B"
        android:layout_marginLeft="350px"
        android:layout_marginTop="1110px"
        ></View>

    <View
        android:layout_width="130px"
        android:layout_height="130px"
        android:alpha="1"
        android:background="@drawable/camcircle"
        android:layout_marginLeft="150px"
        android:layout_marginTop="50px"
        ></View>
    <View
        android:layout_width="70px"
        android:layout_height="70px"
        android:alpha="1"
        android:background="@mipmap/ic_micoff_round"
        android:layout_marginLeft="180px"
        android:layout_marginTop="-100px"
        ></View>

    <View
        android:layout_width="130px"
        android:layout_height="130px"
        android:alpha="1"
        android:background="@drawable/camcircle"
        android:layout_marginLeft="470px"
        android:layout_marginTop="-100px"
        ></View>
    <View
        android:layout_width="70px"
        android:layout_height="70px"
        android:alpha="1"
        android:background="@mipmap/ic_volume_round"
        android:layout_marginLeft="500px"
        android:layout_marginTop="-100px"
        ></View>
    <View
        android:layout_width="130px"
        android:layout_height="130px"
        android:alpha="1"
        android:background="@drawable/camcircle"
        android:layout_marginLeft="780px"
        android:layout_marginTop="-100px"
        ></View>
    <View
        android:layout_width="70px"
        android:layout_height="70px"
        android:alpha="1"
        android:background="@mipmap/ic_pause_round"
        android:layout_marginLeft="810px"
        android:layout_marginTop="-100px"
        ></View>
    <View
        android:layout_width="130px"
        android:layout_height="130px"
        android:alpha="1"
        android:background="@drawable/camcircle"
        android:backgroundTint="#E30707"
        android:layout_marginLeft="470px"
        android:layout_marginTop="40px"
        ></View>
    <TextView
        android:id="@+id/cutcall2"
        android:layout_width="70px"
        android:layout_height="70px"
        android:alpha="1"
        android:text="X"
        android:textSize="50px"
        android:textColor="@color/background"
        android:layout_marginLeft="520px"
        android:layout_marginTop="-100px"
        ></TextView>
</LinearLayout>