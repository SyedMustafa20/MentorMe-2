<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feedback"
    android:orientation="vertical"
    android:background="@color/background">
    <View
        android:layout_width="1140px"
        android:layout_height="800px"
        android:background="@drawable/logindatabox"
        android:backgroundTint="@color/numpad"
        android:layout_marginLeft="-30px"
        android:layout_marginTop="-100px"
        android:alpha="1">
    </View>
    <ImageButton
        android:id="@+id/back7"
        android:layout_width="100px"
        android:layout_height="120px"
        android:src="@mipmap/ic_backnumpad_round"
        android:scaleType="centerCrop"
        android:layout_marginTop="-650px"
        android:layout_marginLeft="30px"
        android:backgroundTint="@color/numpad"
        ></ImageButton>

    <TextView
        android:id="@+id/textView55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, I'm "
        android:textColor="@color/white"
        android:textSize="80px"
        android:textStyle="bold"
        android:layout_marginTop="50px"
        android:layout_marginLeft="30px"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Cooper"
        android:textColor="@color/white"
        android:textSize="80px"
        android:textStyle="bold"
        android:layout_marginLeft="30px"/>

    <View
        android:layout_width="400px"
        android:layout_height="400px"
        android:alpha="0.4"
        android:background="@drawable/forpic"
        android:layout_marginLeft="650px"
        android:layout_marginTop="-330px"
        ></View>
    <ImageView
        android:id="@+id/image"
        android:layout_width="350px"
        android:layout_height="350px"
        android:alpha="1"
        android:background="@mipmap/ic_cooper1_foreground"
        android:layout_marginLeft="680px"
        android:layout_marginTop="-370px"
        ></ImageView>

    <View
        android:layout_width="1200px"
        android:layout_height="10px"
        android:background="@drawable/logindatabox"
        android:backgroundTint="@color/background"
        android:layout_marginLeft="-30px"
        android:layout_marginTop="30px"
        android:alpha="1">
    </View>

    <TextView
        android:id="@+id/textView57"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Drop me a review"
        android:textColor="@color/white"
        android:textSize="55px"
        android:layout_marginTop="50px"
        android:layout_marginLeft="30px"
        />

    <View
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@mipmap/ic_emoji"
        android:layout_marginLeft="460px"
        android:layout_marginTop="-90px"
        android:alpha="1">
    </View>

    <EditText
        android:id="@+id/editTextText13"
        android:layout_width="match_parent"
        android:layout_height="460px"
        android:ems="10"
        android:inputType="text"
        android:hint="Type your experience..."
        android:textColor="#838383"
        android:background="@drawable/specialbox"
        android:layout_marginTop="250px"
        android:paddingBottom="270px"
        android:paddingLeft="50px"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/ratingBar"
        android:layout_marginTop="50px"
        android:layout_marginLeft="65dp"
        android:rating="0"
        android:numStars="5"
        android:stepSize="1"
        android:isIndicator="false"
        android:progressTint="@color/golden"
        android:backgroundTint="@color/white"
        android:progressBackgroundTint="@color/special"
        android:layout_marginRight="30px"/>

    <TextView
        android:id="@+id/submitfeedback"
        android:layout_width="800px"
        android:layout_height="150px"
        android:textAlignment="center"
        android:textSize="50px"
        android:textStyle="bold"
        android:paddingTop="30px"
        android:textColor="@color/white"
        android:background="@drawable/inputbox"
        android:backgroundTint="@color/special"
        android:text="Submit Feedback"
        android:layout_marginTop="380px"
        android:layout_marginLeft="150px"/>
</LinearLayout>