        android:alpha="0.4"
        android:background="@drawable/chatactivity"
        android:layout_marginLeft="50px"
        android:layout_marginTop="-10px"
        android:backgroundTint="@color/golden"
        ></View>


    <ImageView
        android:layout_width="60px"
        android:layout_height="60px"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginLeft="100px"
        android:layout_marginTop="-120px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:padding="20px"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="Yes?"
        android:background="@drawable/inputbox"
        android:backgroundTint="@color/white"
        android:layout_marginTop="-75px"
        android:layout_marginLeft="250px"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:textAlignment="center"
        android:textColor="#838383"
        android:text="10:30"
        android:layout_marginTop="-10px"
        android:layout_marginLeft="260px"
        android:textSize="25px"
        />

    <TextView
        android:layout_width="400px"
        android:layout_height="100px"
        android:padding="20px"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="I need your guidence"
        android:background="@drawable/inputbox"
        android:backgroundTint="@color/circle"
        android:layout_marginTop="0px"
        android:layout_marginLeft="650px"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:textAlignment="center"
        android:textColor="#838383"
        android:text="10:30"
        android:layout_marginTop="0px"
        android:layout_marginLeft="900px"
        android:textSize="25px"
        />

    <View
        android:layout_width="155px"
        android:layout_height="155px"
        android:alpha="0.4"
        android:background="@drawable/chatactivity"
        android:layout_marginLeft="50px"
        android:layout_marginTop="-10px"
        android:backgroundTint="@color/golden"
        ></View>


    <ImageView
        android:layout_width="60px"
        android:layout_height="60px"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginLeft="100px"
        android:layout_marginTop="-120px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:padding="20px"
        android:textAlignment="center"
        android:textColor="@color/black"
