    <ImageButton
        android:id="@+id/videobtn"
        android:layout_width="100px"
        android:layout_height="100px"
        android:src="@mipmap/ic_videocam_round"
        android:scaleType="centerCrop"
        android:layout_marginTop="-100px"
        android:layout_marginLeft="900px"
        android:background="@color/numpad"
        android:backgroundTint="@color/numpad"
        ></ImageButton>

    <TextView
        android:id="@+id/textView79"
        android:layout_width="350px"
        android:layout_height="100px"
        android:padding="20px"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="Hello, you there?"
        android:background="@drawable/inputbox"
        android:backgroundTint="@color/circle"
        android:layout_marginTop="850px"
        android:layout_marginLeft="700px"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:textAlignment="center"
