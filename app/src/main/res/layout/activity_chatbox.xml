        android:background="@drawable/inputbox"
        android:backgroundTint="@color/white"
        android:layout_marginTop="-75px"
        android:layout_marginLeft="250px"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:textAlignment="center"
        android:textColor="#838383"
        android:text="10:30"
        android:layout_marginTop="-10px"
        android:layout_marginLeft="260px"
        android:textSize="25px"
        />

    <EditText
        android:layout_width="1000px"
        android:layout_height="200px"
        android:alpha="1"
        android:background="@drawable/inputbox"
        android:layout_marginLeft="50px"
        android:layout_marginTop="100px"
        android:backgroundTint="@color/numpad"
        android:text="Type something..."
        android:textColor="@color/background"
        android:paddingBottom="65px"
        android:paddingLeft="180px"
        android:paddingRight="400px"
        ></EditText>

    <View
        android:layout_width="95px"
        android:layout_height="95px"
        android:alpha="1"
        android:background="@mipmap/ic_file_round"
        android:layout_marginLeft="50px"
        android:layout_marginTop="-175px"
        ></View>

    <View
        android:layout_width="95px"
        android:layout_height="95px"
        android:alpha="1"
        android:background="@mipmap/ic_chatphoto_round"
        android:layout_marginLeft="130px"
        android:layout_marginTop="-95px"
        ></View>
    <ImageButton
        android:id="@+id/cambtn"
        android:layout_width="95px"
        android:layout_height="95px"
        android:alpha="1"
        android:background="@mipmap/ic_cameraaa_round"
        android:layout_marginLeft="730px"
        android:layout_marginTop="-95px"
