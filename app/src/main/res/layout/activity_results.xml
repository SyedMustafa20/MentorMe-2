<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results"
    android:orientation="vertical"
    android:background="@color/background"
    >
<View
    android:layout_width="500px"
    android:layout_height="500px"
    android:alpha="0.4"
    android:background="@drawable/frontpagecircles"
    android:layout_marginLeft="-290px"
    android:layout_marginTop="-60px"
    ></View>

<View
    android:layout_width="500px"
    android:layout_height="500px"
    android:background="@drawable/frontpagecircles"
    android:layout_marginLeft="-150px"
    android:layout_marginTop="-600px"
    android:alpha="0.4">
</View>



    <ImageButton
        android:id="@+id/back5"
        android:layout_width="100px"
        android:layout_height="120px"
        android:src="@mipmap/ic_backcircle_round"
        android:scaleType="centerCrop"
        android:layout_marginTop="-300px"
        android:layout_marginLeft="30px"
        android:backgroundTint="#8FD8CB"
        ></ImageButton>

    <TextView
        android:id="@+id/textView53"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Results"
        android:textSize="80px"
        android:textStyle="bold"
        android:layout_marginLeft="60px"
        android:layout_marginTop="10px"
        android:textColor="@color/special"
        />

    <TextView
        android:id="@+id/textView54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Filter ^  "
        android:textStyle="bold"
        android:textColor="@color/special"
        android:textSize="40px"
        android:background="#D3D3D3"
        android:layout_marginTop="10px"
        android:layout_marginLeft="850px"
        android:padding="10px"
        />
    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="200px"
        android:layout_height="80px"
        android:background="@drawable/inputbox"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="800px"
        android:layout_marginTop="30px"
        ></Spinner>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="584dp"
    android:layout_marginTop="40px"
    android:background="@color/background"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView13"

        app:layout_constraintTop_toBottomOf="@+id/view" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_marginTop="-90dp"
        android:layout_marginBottom="-300px"
        android:background="@color/background"
        android:orientation="vertical">

        <View
            android:id="@+id/addnew"
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="@drawable/addnew"
            android:layout_marginLeft="440px"
            android:layout_marginTop="-30px"
            android:alpha="1">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350px"
            android:layout_marginTop="-100px"
            android:layout_marginBottom="-300px"
            android:background="@color/special"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/home3"
                android:layout_width="180px"
                android:layout_height="130px"
                android:layout_marginLeft="20px"
                android:layout_marginTop="0px"
                android:backgroundTint="@color/special"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_home2_round"></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/background"
                android:layout_marginTop="100px"
                android:layout_marginLeft="-140px"
                />
            <ImageButton
                android:id="@+id/searchbtn2"
                android:layout_width="180px"
                android:layout_height="130px"
                android:layout_marginLeft="60px"
                android:layout_marginTop="10px"
                android:backgroundTint="@color/special"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_searchclk_round"></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@color/background"
                android:layout_marginTop="100px"
                android:layout_marginLeft="-140px"
                />

            <ImageButton
                android:id="@+id/chat3"
                android:layout_width="180px"
                android:layout_height="130px"
                android:layout_marginLeft="300px"
                android:layout_marginTop="10px"
                android:backgroundTint="@color/special"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_msg"></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textColor="@color/background"
                android:layout_marginTop="100px"
                android:layout_marginLeft="-140px"
                />
            <ImageButton
                android:id="@+id/profile3"
                android:layout_width="180px"
                android:layout_height="130px"
                android:layout_marginLeft="80px"
                android:layout_marginTop="10px"
                android:backgroundTint="@color/special"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_person"></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/background"
                android:layout_marginTop="100px"
                android:layout_marginLeft="-140px"
                />
        </LinearLayout>
        <ImageButton
            android:id="@+id/addnew3"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="500px"
            android:layout_marginTop="-90px"
            android:background="@drawable/addnew"
            android:backgroundTint="@color/special"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_circleadd_round"></ImageButton>
    </LinearLayout>

</LinearLayout>